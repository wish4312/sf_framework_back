<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lsitc.domain.common.bloc.dao.BlocDAO">
  <select id="selectBlocById"
    parameterType="com.lsitc.domain.common.bloc.entity.BlocEntity"
    resultType="com.lsitc.domain.common.bloc.entity.BlocEntity">
    SELECT id
         , name
         , is_deleted
         , deleted_by
         , deleted_date
         , remark
         , created_by
         , created_date
         , last_modified_by
         , last_modified_date
    FROM sf_bloc
    WHERE id = #{id}
  </select>
</mapper>